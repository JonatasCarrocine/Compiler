/* Um programa para verificar se dada entrada eh par ou impar 
Se par, retorna 1
Se impar, retorna 0*/

int isEven(int num) {
    if (num == 0) return 1;
    else if (num == 1) return 0;
    else return isEven(num - 2);
}

void main(void) {
    int number;
    int result;

    number = input();

    result = isEven(number);
}